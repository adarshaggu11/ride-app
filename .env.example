# Environment Variables for Mana Auto Oka Ride (Frontend)

# Toggle production features inside the app
VITE_PRODUCTION_MODE=false

# Google Maps API Key (Get from: https://console.cloud.google.com/)
VITE_GOOGLE_MAPS_API_KEY=

# API Base URL
VITE_API_BASE_URL=http://localhost:3000/api

# WebSocket Server URL for real-time updates
VITE_WS_URL=ws://localhost:3001

# Firebase Configuration (Web; modular v12)
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=
VITE_FIREBASE_VAPID_KEY=

# Payment Gateway Keys (optional)
VITE_RAZORPAY_KEY_ID=
VITE_STRIPE_PUBLISHABLE_KEY=

# SMS Gateway (optional)
VITE_SMS_API_KEY=

# Other Configuration
VITE_APP_ENV=development
VITE_ENABLE_ANALYTICS=false

# Backend service env (to be placed in backend/.env)
# MONGODB_URI=mongodb://localhost:27017/mana-auto-ride
# FRONTEND_URL=http://localhost:8080
